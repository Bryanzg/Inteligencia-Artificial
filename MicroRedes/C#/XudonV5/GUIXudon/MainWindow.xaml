<Window x:Class="GUIXudon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIXudon"
        mc:Ignorable="d"
        Title="MainWindow">

    <Grid>
        <ScrollViewer x:Name="ScrollGlobalContainer" BorderBrush="Black" BorderThickness="1">
            <StackPanel x:Name="StackPanelForLayers" Margin="10,10,10,10">
                <Button Content="3D" Height="32" VerticalAlignment="Top" Click="Button_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</Window>



